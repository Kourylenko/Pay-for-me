root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{js,json,ts}]
indent_size = 2

[*.{html}]
indent_size = 4

[*.{css}]
indent_size = 4

[*.{yml}]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
